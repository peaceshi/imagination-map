{
  "name": "imagination-map",
  "version": "1.0.0",
  "description": "With a little imagination, the code would be better.",
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "web-test-runner \"src/**/*.test.tsx\"",
    "check:format": "prettier --check ./",
    "format": "prettier --write ./",
    "eslint:lint": "eslint ./",
    "eslint:fix": "eslint ./ --fix",
    "stylelint:lint": "stylelint ./",
    "stylelint:fix": "stylelint ./ --fix"
  },
  "repository": "git+https://github.com/peaceshi/imagination-map.git",
  "author": "peaceshi <peaceshi@outlook.com> (https://github.com/peaceshi)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peaceshi/imagination-map/issues"
  },
  "homepage": "https://github.com/peaceshi/imagination-map#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/*.{js,jsx,mjs,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/*.{css,less,scss}": [
      "stylelint --config .stylelintrc.json --fix"
    ],
    "src/*.{css,scss,less,json,html,md,markdown}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@snowpack/plugin-dotenv": "^2.0.4",
    "@snowpack/plugin-react-refresh": "^2.3.7",
    "@snowpack/plugin-run-script": "^2.2.0",
    "@snowpack/plugin-typescript": "^1.1.0",
    "@snowpack/web-test-runner-plugin": "^0.1.4",
    "@testing-library/react": "^11.0.0",
    "@types/chai": "^4.2.13",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/snowpack-env": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "@web/test-runner": "^0.9.7",
    "chai": "^4.2.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jsdoc": "^30.7.7",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.3.0",
    "jsdoc": "^3.6.6",
    "lint-staged": "^10.5.1",
    "postcss": "^8.1.7",
    "prettier": "2.1.2",
    "snowpack": "^2.17.1",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-high-performance-animation": "^1.5.2",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.0.0",
    "watch": "^1.0.2"
  }
}
