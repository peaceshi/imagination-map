{
  "name": "imagination-map",
  "version": "0.1.0",
  "description": "With a little imagination, the code would be better.",
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "web-test-runner \"src/**/*.test.tsx\"",
    "check:format": "prettier --check ./",
    "format": "prettier --write ./",
    "eslint:lint": "eslint ./",
    "eslint:fix": "eslint ./ --fix",
    "stylelint:lint": "stylelint ./",
    "stylelint:fix": "stylelint ./ --fix"
  },
  "repository": "git+https://github.com/peaceshi/imagination-map.git",
  "author": "peaceshi <peaceshi@outlook.com> (https://github.com/peaceshi)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/peaceshi/imagination-map/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/*.{js,jsx,mjs,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/*.{css,less,scss}": [
      "stylelint --config .stylelintrc.json --fix"
    ],
    "src/*.{css,scss,less,json,html,md,markdown}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "ahooks": "^2.9.4",
    "antd": "^4.10.2",
    "deck.gl": "^8.3.13",
    "immer": "^8.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-map-gl": "^6.0.3",
    "screenfull": "^5.1.0",
    "stook": "^0.5.0",
    "stook-devtools": "^0.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@danmarshall/deckgl-typings": "^4.4.2",
    "@snowpack/plugin-dotenv": "^2.0.5",
    "@snowpack/plugin-react-refresh": "^2.3.9",
    "@snowpack/plugin-run-script": "^2.2.1",
    "@snowpack/plugin-typescript": "^1.1.1",
    "@snowpack/plugin-webpack": "^2.1.3",
    "@snowpack/web-test-runner-plugin": "^0.1.5",
    "@testing-library/react": "^11.2.3",
    "@types/chai": "^4.2.13",
    "@types/mocha": "^8.2.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-map-gl": "^5.2.9",
    "@types/snowpack-env": "^2.3.3",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "@web/test-runner": "^0.10.2",
    "chai": "^4.2.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-tsdoc": "^0.2.10",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "prettier": "2.1.2",
    "snowpack": "^2.18.5",
    "snowpack-plugin-less": "^1.0.5",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.3.0",
    "stylelint-high-performance-animation": "^1.5.2",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.1.2",
    "watch": "^1.0.2"
  }
}
